<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
	@Project : Serendipity
	@File name : MyPageDAO.xml
	@Author : 강대규
	@Date : 16.06.08
	@Desc : MyPageDAO의 Mapper / 실제 DB연동을 위한 Query가 들어가는 부분
 -->

<mapper namespace="kr.co.serendipity.model.MyPageDAO">
	<select id="getHobbyList" resultType="kr.co.serendipity.model.HobbyDTO">
		select * from hobby order by hobby_code asc
	</select>
	
	<select id="getLanguageList" resultType="kr.co.serendipity.model.LanguageDTO">
		select * from language order by language_code asc
	</select>
	
	<select id="getMemberInfo" resultType="kr.co.serendipity.model.MemberDTO">
		select * from member where id=#{id}
	</select>
	
	<select id="myPageGetMemberInfo" resultType="kr.co.serendipity.model.MemberDTO">
		select * from member where user_num=#{user_num}
	</select>
	
</mapper>