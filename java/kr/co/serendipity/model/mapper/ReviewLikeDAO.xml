<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.serendipity.model.ReviewLikeDAO">
	
	<select id="reviewLikeCount" resultType="java.util.Integer">
		select count(review_num) from reply where review_num=#{review_num}
	</select>
	
	<insert id="likeInsert">
		insert into reply(reply_num,user_num,review_num,reply_content,reply_date)
		values(reply_seq.nextval, #{user_num}, #{review_num}, #{reply_content}, sysdate)
	</insert>
</mapper>