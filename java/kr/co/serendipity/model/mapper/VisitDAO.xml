<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.serendipity.model.VisitDAO">
	<insert id="setVisitTotalCount">
		insert into visit(visit_date) values(sysdate)
	</insert>
	
	<select id="getVisitTotalCount" resultType="Integer">
		select count(*) from visit
	</select>
	
	<select id="getVisitTodayCount" resultType="Integer">
		select count(*) from visit where substr(to_char(v_date), 1, 9) = to_date(sysdate, 'yy/MM/dd')
	</select>
</mapper>